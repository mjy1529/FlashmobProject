<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:background="@color/colorAccentText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/home_main_imageview"/>

    <TextView
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:id="@+id/home_main_title"/>

    <TextView
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/home_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:id="@+id/home_main_date"/>

    <TextView
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/home_main_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_main_place"
        android:text="place"/>

</RelativeLayout>