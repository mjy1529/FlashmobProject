<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp.SignCategoryActivity">

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your preferred hashtag"
        android:textColor="@color/colorAccentText"
        android:textStyle="bold"
        android:textSize="19dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/title_text"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sign_cate_layout"
        android:id="@+id/sign_cate_recyclerView">
    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/sign_cate_layout"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/sign_cate_left_button"
            android:padding="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/left_arrow"/>

        <Button
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/sign_cate_right_button"
            android:padding="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/right_arrow"/>


    </RelativeLayout>


</RelativeLayout>